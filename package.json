{
  "name": "wordle-bot",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & sleep 1 && nodemon --quiet dist/index.js",
    "dev:bun": "tsc -w & sleep 1 && bun run --watch dist/index.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@xmtp/message-kit": "1.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/node": "^20.14.2",
    "nodemon": "^3.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  }
}
